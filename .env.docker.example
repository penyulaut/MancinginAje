# ==============================================
# MancinginAje Docker Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# then run: docker-compose up -d --build

# Application Settings
APP_NAME=MancinginAje
APP_ENV=production
APP_KEY=base64:GENERATE_YOUR_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost:2310
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id

# Database (SQLite default, no config needed)
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Midtrans Payment Gateway (REQUIRED)
MIDTRANS_MERCHANT_ID=your_merchant_id
MIDTRANS_CLIENT_KEY=your_client_key
MIDTRANS_SERVER_KEY=your_server_key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_ENV=sandbox

# Biteship Shipping API (REQUIRED for shipping)
BITESHIP_API_KEY=your_biteship_api_key
BITESHIP_BASE_URL=https://api.biteship.com
BITESHIP_ORIGIN_POSTAL_CODE=12345

# Pusher Real-time (Optional)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=ap1

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
